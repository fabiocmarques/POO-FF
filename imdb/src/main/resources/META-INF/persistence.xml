<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
  <persistence-unit name="imdb">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.unb.cic.imdb.negocio.Genero</class>
    <class>br.unb.cic.imdb.negocio.Autor</class>
    <class>br.unb.cic.imdb.negocio.TrabalhoArtistico</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <!--
        if you don't have a database already created
        append ;create=true to end of the jdbc url
      -->
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:test;create=true"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/> 
      </properties>
  </persistence-unit>
</persistence>