Expressao getSoma():
{
	Expressao lhs;
	Expressao rhs;
}
{
	lhs = expr()
	rhs = expr()
	
	{return new ExpressaoSoma(lhs, rhs);} 
}


Expressao getLet():
{
	Expressao expAt;
	Expressao expCorpo;
	String id;
	Token idToken;
}
{
	idToken = <STRING>
	<EQUALS>
	expAt = expr()
	<IN>
	expCorpo = expr()
	
	{return new ExpressaoLet(idToken.image, expAt, expCorpo);}
}


void getArgumentos(ArrayList<String> argumentos):{
  Token t;}
{
    t = < STRING >
    
  {
    argumentos.add(t.image);  }      
    getArgumentos(argumentos)
| < RPAR >
	{  
		return;	}        
    }


DecFuncao getFunc():
{
  Token nome;
  ArrayList<String> argumentos = new ArrayList<String>();
  Expressao exp;}
{
	nome = < STRING >
  
  < LPAR >  	  getArgumentos(argumentos)
  

  < LPAR >
  	exp = expr()
  < RPAR >

  {    return(new DecFuncao(nome.image, argumentos, exp));
  }}


void getParametros(ArrayList<Expressao> exprs):
{
  Expressao exp;}
{

 < RPAR >
	{
	  return;
	}

|
	exp = expr()
	{  	exprs.add(exp);
	}
  
  getParametros(exprs)
  }



Expressao getEval():
{
  Token nome;
  ArrayList<Expressao> exprs = new ArrayList<Expressao>();
  AplicacaoDeFuncao func;
  Valor v;}
{
  nome = <STRING>

  < LPAR >
  getParametros(exprs)


  {    func = new AplicacaoDeFuncao(nome.image, exprs);
    return func.avaliar();  }  

   

  }






Expressao expr():
{
  Token t;
  Token ref;
  Token func;
  ValorBooleano ret = new ValorBooleano(false);
  ExpressaoSoma s;
  DecFuncao dec;
  Expressao exp;
  int lhs = 0;
  int rhs = 0;
  ValorInteiro res;
}
{
	
  	<PLUS>
  	(
   		exp = getSoma()
   		
   		{return exp;}
  	)*
|	t = <NUMBER> 
	{ return new ValorInteiro(Integer.parseInt(t.image));}
|	<LET>
	(
		exp = getLet()
		
		{return exp;}
	)*
|   ref = <STRING>
	{ return new ExpRef(ref.image);}
|	< FUNC >
	(
	  dec = getFunc()
	  {
	    AmbienteExecucao.getInstance().declaraFuncao(dec);	  }
	  {return ret = new ValorBooleano(true);}	)*
| 	< EVAL >
	exp = getEval()
 
}





